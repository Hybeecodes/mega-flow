         <link href="/stylesheets/demo.css" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="/stylesheets/pe-icon-7-stroke.css" rel="stylesheet" />
</head>
<body>

    <%- include('../partials/user-side-nav') %>

    <!--   you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple" -->
        <%- include('../partials/header') %>
        

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Edit Profile</h4>
                            </div>
                            <center>
                                <div class="alert" style="display:none;">
          
                                </div>
                              </center>
                            <div class="content">
                                <form class="my-form" id="profileForm" action="/users/profile" method="post" enctype="multipart/form-data" role="form">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label>Your blog Page Name</label>
                                                <input type="text" id="blogname" class="form-control" placeholder="blog page name"
                                        
                                                 <% if(user.blogname){ %>
                                                    value="<%=user.blogname %>"
                                                <% }else{ %>
                                                    value=""
                                                <% } %>
                                                  id="blogname" name="blogname">
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Username</label>
                                                <input type="text" id="username" class="form-control" placeholder="Username" value="<%= user.username %>" name="username">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Email address</label>
                                                <input type="email" class="form-control" id="email" placeholder="Email" value="<%= user.email %>" name="email" >
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>First Name</label>
                                                <input type="text" class="form-control" id="firstname" placeholder="Firstname" value="<%= user.firstname %>" name="firstname" >
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Last Name</label>
                                                <input type="text" class="form-control" id="lastname" placeholder="Last Name" value="<%= user.lastname %>" name="lastname" >
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Address</label>
                                                <input type="text" class="form-control" id="address" placeholder="Home Address"
                                                 
                                                 <% if(user.address){ %>
                                                    value="<%=user.address %>"
                                                <% }else{ %>
                                                    value=""
                                                <% } %>
                                                  name="address">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>City</label>
                                                <input type="text" class="form-control" id="city" placeholder="City"
                                                <% if(user.city){ %>
                                                    value="<%=user.city %>"
                                                <% }else{ %>
                                                    value=""
                                                <% } %>
                                                  name="city">
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Country</label>
                                                <input type="text" class="form-control" id="country" placeholder="Country"
                                                <% if(user.country){ %>
                                                    value="<%=user.country %>"
                                                <% }else{ %>
                                                    value=""
                                                <% } %>
                                                  name="country" >
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Postal Code</label>
                                                <input type="number" class="form-control" id="zip_code" placeholder="ZIP Code"
                                                <% if(user.zipcode){ %>
                                                    value="<%=user.zipcode %>"
                                                <% }else{ %>
                                                    value=""
                                                <% } %>
                                                 name="zipcode" >
                                            </div>
                                    
                                    </div>

                                    <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>facebook </label>
                                                    <input type="text" class="form-control" id="facebook" placeholder="facebook"
                                                    <% if(user.facebook){ %>
                                                        value="<%=user.facebook %>"
                                                    <% }else{ %>
                                                        value=""
                                                    <% } %>
                                                      name="facebook" >
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Twitter</label>
                                                    <input type="text" class="form-control" id="twitter" placeholder="twitter"
                                                    <% if(user.twitter){ %>
                                                        value="<%=user.twitter %>"
                                                    <% }else{ %>
                                                        value=""
                                                    <% } %>
                                                      name="twitter" >
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Instagram</label>
                                                    <input type="text" class="form-control" id="instagram" placeholder="Instagram"
                                                    <% if(user.instagram){ %>
                                                        value="<%=user.instagram %>"
                                                    <% }else{ %>
                                                        value=""
                                                    <% } %>
                                                    name="instagram">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Change Profile picture</label>
                                                <input type="file" class="form-control" id="photo" placeholder="Change Picture" accept="image/*" name="photo">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>About You</label>
                                                <textarea rows="5" class="form-control" id="about" placeholder="Here can be your description"
                                                 name="about"><% if(user.about){ %><%=user.about %><%}%></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <button type="submit" id="update" class="btn btn-info btn-fill pull-right">Update Profile</button>
                                    <div class="clearfix"></div>

                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-user">
                            <div class="image">
                                <img src="/images/about-bg.jpg" alt="..."/>
                            </div>
                            <div class="content">
                                <div class="author">
                                     <a href="#">
                                         <% if(user.photo){
                                            var img = user.photo;
                                         } %>
                                                           
                                    <img class="avatar border-gray"
                                    <% if(user.photo){ %>
                                        src="<%= img %>"
                                    <% }else{ %>
                                        src="/images/default-avatar.png"
                                    <% } %>
                                    alt="..."/>

                                      <h4 class="title"><%= user.firstname%>    <%= user.lastname%><br />
                                         <small><%= user.username%></small>
                                      </h4>
                                    </a>
                                </div>
                                <p class="description text-center"> 
                                        <% if(user.about){ %><%=user.about %><%}%>
                                </p>
                            </div>
                            
                            <div class="text-center">
                                <a <% if(user.facebook){ %>
                                        href="https://www.facebook.com/<%= user.facebook %>"
                                    <% }else{ %>
                                        href="https://www.facebook.com/"
                                    <% } %>>
                                <button class="btn btn-simple"><i class="fa fa-facebook-square"></i></button></a>

                                    <a <% if(user.twitter){ %>
                                            href="https://www.twitter.com/<%= user.twitter %>"
                                        <% }else{ %>
                                            href="https://www.twitter.com/"
                                        <% } %>>
                                    <button class="btn btn-simple"><i class="fa fa-twitter"></i></button></a>
                                
                                        <a <% if(user.instagram){ %>
                                                href="https://www.instagram.com/<%= user.instagram %>"
                                            <% }else{ %>
                                                href="https://www.instagram.com/"
                                            <% } %>>
                                        <button class="btn btn-simple"><i class="fa fa-instagram"></i></button></a>
                                <!-- <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button> -->

                            </div>
                            
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <%- include('../partials/footer') %>



</body>

<script src="/javascripts/jquery-1.10.2.js" type="text/javascript"></script>
<script src="/javascripts/bootstrap.min.js" type="text/javascript"></script>

