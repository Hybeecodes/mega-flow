                            <p class="lead">
                                by <a href="#"> <%= post.author.username %> </a>
                            </p>
                            <hr>
            
                            <!-- Date/Time -->
                            <p>Posted on <%= moment(post.date).format("LL") %> </p>
            
                            <hr>
            
                            <% if(post.post_img){ %>
                                <% var img = post.post_img.path.substring(6); %>
                                <img class="card-img-top img-responsive" src="<%= img %>" alt="Card image cap">
                              <% } %>
                            <hr>
            
                            <!-- Post Content -->
                            <p class="lead"> 
                                <%= post.detail %>
                            </p>
            
                            <hr>
                            <h3>Comments</h3>
